<h1>All Items</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Active?</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.title, item_path(item) %></td>
        <td><%= number_to_currency item.price %></td>
        <td><%= item.active? ? 'Yes' : 'No' %>
        <td><%= link_to 'Edit', edit_item_path(item) %> | <%= link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p><%= link_to 'New Item', new_item_path %></p>

<%= will_paginate @items, renderer: BootstrapPagination::Rails %>
